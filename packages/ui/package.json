{
  "name": "@gigwidget/ui",
  "version": "0.1.0",
  "private": true,
  "description": "Shared Svelte UI components for Gigwidget",
  "type": "module",
  "svelte": "./src/lib/index.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./src/lib/index.ts"
    },
    "./components": {
      "types": "./dist/components/index.d.ts",
      "svelte": "./src/lib/components/index.ts"
    }
  },
  "scripts": {
    "build": "svelte-package",
    "dev": "svelte-package --watch",
    "typecheck": "svelte-check --tsconfig ./tsconfig.json",
    "clean": "rm -rf dist"
  },
  "peerDependencies": {
    "svelte": "^5.0.0"
  },
  "dependencies": {
    "@gigwidget/core": "workspace:*"
  },
  "devDependencies": {
    "@sveltejs/package": "^2.3.0",
    "@sveltejs/vite-plugin-svelte": "^4.0.0",
    "svelte": "^5.0.0",
    "svelte-check": "^4.0.0",
    "typescript": "^5.7.0"
  }
}
