{
  "name": "@gigwidget/db",
  "version": "0.1.0",
  "private": true,
  "description": "IndexedDB schema and repositories for Gigwidget",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./repositories": {
      "types": "./dist/repositories/index.d.ts",
      "import": "./dist/repositories/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@gigwidget/core": "workspace:*",
    "dexie": "^4.0.0"
  },
  "devDependencies": {
    "typescript": "^5.7.0"
  }
}
